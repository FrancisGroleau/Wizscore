@model Wizscore.ViewModels.BidResultSubmitViewModel
@{
    Layout = "_GameLayout";
    ViewData["Heading"] = $"Actual value for round: {ViewBag.RoundNumber}";
}
<div class="row">
    <div class="sm-col-12">
        <form asp-action="BidResultSubmit" asp-controller="Game" method="post">
            <input id="bid" type="hidden" asp-for="ActualValue" style="display: none" />
            <div class="plus-minus-button-container">
                <button id="plus" type="button" class="btn btn-lg btn-outline-primary plus-button">
                    <i class="bi bi-plus-square"></i>
                </button>
                <span id="bidDisplay" class="bid">0</span>
                <button id="minus" type="button" class="btn btn-lg btn-outline-primary minus-button">
                    <i class="bi bi-dash-square"></i>
                </button>
            </div>

            <button type="submit" style="width: 100%" class="btn btn-lg btn-outline-success mt-5 align-self-end">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/BidResult.js" type="text/javascript"></script>
}