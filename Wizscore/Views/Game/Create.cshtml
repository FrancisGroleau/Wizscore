@model Wizscore.ViewModels.GameSubmitCreateViewModel
<div class="row">
    <div class="sm-col-12">
        <h1>Create a new game!</h1>
    </div>
</div>
<div class="row">
    <div class="sm-col-12">
        <table class="model-state">
            @foreach (var item in ViewContext.ViewData.ModelState)
            {
                if (item.Value.Errors.Any())
                {
                    <tr>
                        <td><b>@item.Key</b></td>
                        <td>@(item.Value == null ? "<null>" : item.Value.RawValue)</td>
                        <td>@(string.Join("; ", item.Value.Errors.Select(x => x.ErrorMessage)))</td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="sm-col-12">
        <form asp-action="SubmitCreate" asp-controller="Game" method="post">
            <label asp-for=NumberOfPlayers class="form-label">Number of player: </label>
            <input asp-for="NumberOfPlayers" class="form-control" aria-describedby="numberOfPlayersHelp" />
            <div id="numberOfPlayersHelp" class="form-text">The number of players will dictate how many rounds you'll play</div>

            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" aria-describedby="usernameHelp" />
            <div id="usernameHelp" class="form-text">Enter your username for this game</div>

            <button type="submit" class="btn btn-outline-success mt-5 align-self-end">Create</button>
        </form>
    </div>
</div>
