@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Snake</title>
        <style>
            html, body {
                height: 100%;
                margin: 0;
                padding: 0;
                overflow: hidden;
            }
            body {
                display: flex;
                align-items: center;
                justify-content: center;
                min-height: 100vh;
                background: #111;
            }
            #snake-canvas {
                display: block;
                background: #111;
                box-shadow: 0 0 32px #000a;
                border: 4px solid #fff;
                width: 600px;
                height: 600px;
                max-width: 100vw;
                max-height: 100vh;
            }
            #snake-score-label {
                margin: 8px 8px 0 0;
                z-index: 10;
                font-weight: bold;
                color: #ffd700;
                font-size: 1.3rem;
                padding: 6px 18px;
                min-width: 120px;
            }
            #game-container {
                position: relative; 
                display: flex; 
                justify-content: center; 
                align-items: flex-start;
                flex-direction: column;
            }
        </style>
    </head>
    <body>
        <div id="game-container">
            <div id="snake-score-label">Score: 0</div>
            <canvas id="snake-canvas"></canvas>
        </div>
        <script src="/js/snake.js"></script>
    </body>
</html>